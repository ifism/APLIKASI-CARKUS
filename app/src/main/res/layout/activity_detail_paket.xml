<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgsaran"
    tools:context=".UpdateProfilActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title=""
        app:titleTextColor="@color/color2"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/splash"
        android:orientation="vertical"
        android:paddingHorizontal="17dp"
        android:paddingVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pic_paket"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/noimages"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:background="@drawable/bg_ic_gambar"
                android:gravity="center"
                app:civ_border_color="@color/white"
                app:civ_border_width="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageButton
                    android:id="@+id/IM_ubahpaket"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/ic_foto"
                    android:clickable="true"
                    android:elevation="3dp"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/ETUp_namapaket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_bg"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="15dp"
            android:fontFamily="@font/poppins"
            android:hint="Nama Paket"
            android:maxLength="20"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/ETUp_jumlahpertemuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_bg"
            android:drawableLeft="@drawable/ic_nim"
            android:drawablePadding="15dp"
            android:fontFamily="@font/poppins"
            android:hint="jumlah pertemuan"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/ETUp_harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_bg"
            android:drawableLeft="@drawable/ic_telepon"
            android:drawablePadding="15dp"
            android:fontFamily="@font/poppins"
            android:hint="Harga"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/ETUp_mentor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_bg"
            android:drawableLeft="@drawable/ic_telepon"
            android:drawablePadding="15dp"
            android:fontFamily="@font/poppins"
            android:hint="Mentor"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/BTNUbahpaket"
            android:layout_width="296dp"
            android:layout_height="43dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/button_tambah_kontak_bg"
            android:text="Ubah data"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>