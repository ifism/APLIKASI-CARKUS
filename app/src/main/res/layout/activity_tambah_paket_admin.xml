<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgdashboard"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_kembali_tambahpaket"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_kembali"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/TVprofil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic_nav_menu"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/carter_one"
            android:layout_marginTop="3dp"
            android:text="Tambah Paket"
            android:textColor="@color/color2"
            android:textSize="20dp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic_paket"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/noimages"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/bg_ic_gambar"
            android:gravity="center"
            app:civ_border_color="@color/white"
            app:civ_border_width="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/IM_tambahfoto_paket"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_foto"
                android:clickable="true"
                android:elevation="3dp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/ETnama_paket"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:fontFamily="@font/poppins"
        android:hint="Nama_paket"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_nama"
        android:drawablePadding="15dp" />

    <EditText
        android:id="@+id/ETjumlah_pertemuan"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:fontFamily="@font/poppins"
        android:hint="jumlah_pertemuan"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="12dp"
        android:maxLength="50"
        android:textSize="14sp"
        android:drawableLeft="@drawable/ic_riwayat_peminjaman"
        android:drawablePadding="15dp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/ETharga"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_bg"
        android:fontFamily="@font/poppins"
        android:hint="Harga"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:inputType="number"
        android:maxLength="14"
        android:textSize="14sp"
        android:drawableLeft="@drawable/ic_telepon"
        android:drawablePadding="15dp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/ETmentor"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_bg"
        android:fontFamily="@font/poppins"
        android:hint="Mentor"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:maxLength="14"
        android:textSize="14sp"
        android:drawableLeft="@drawable/ic_nim"
        android:drawablePadding="15dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/BTNTambahPaket"
        android:layout_width="296dp"
        android:layout_height="43dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_tambah_kontak_bg"
        android:text="Tambah"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

</LinearLayout>