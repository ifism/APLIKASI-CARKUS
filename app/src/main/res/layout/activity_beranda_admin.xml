<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgdashboard"
    android:id="@+id/drawer_layout1"
    tools:context=".BerandaAdminActivity">

    <LinearLayout
        android:id="@+id/linearLayout01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/main_toolbar"/>

        <TextView
            android:id="@+id/TVprofil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic_nav_menu"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/carter_one"
            android:layout_marginLeft="25dp"
            android:text="Beranda"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/TVfitur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv_info"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Fitur Aplikasi"
            android:textColor="@color/color2"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_info" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TVfitur"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/fitur1_jenispaket"
                android:layout_width="140dp"
                android:layout_height="169dp"
                android:layout_marginVertical="4dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/static_info_model_bg"
                android:elevation="2dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagefitur1"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/list_paket" />

                <TextView
                    android:id="@+id/TVfitur1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="120dp"
                    android:fontFamily="@font/poppins"
                    android:text="List Paket Kursus"
                    android:textSize="11dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fitur2_kontak"
                android:layout_width="140dp"
                android:layout_height="169dp"
                android:layout_marginVertical="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/static_info_model_bg"
                android:elevation="2dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagefitur2"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_marginTop="17dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/kontak" />

                <TextView
                    android:id="@+id/TVfitur2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="120dp"
                    android:fontFamily="@font/poppins"
                    android:text="Kontak Mentor"
                    android:textSize="11dp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TVfitur"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/fitur3_user"
                android:layout_width="140dp"
                android:layout_height="169dp"
                android:layout_marginVertical="4dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/static_info_model_bg"
                android:elevation="2dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagefitur3"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/pendaftar" />

                <TextView
                    android:id="@+id/TVfitur3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="120dp"
                    android:fontFamily="@font/poppins"
                    android:text="Pendaftar"
                    android:textSize="11dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fitur4_saran"
                android:layout_width="140dp"
                android:layout_height="169dp"
                android:layout_marginVertical="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/static_info_model_bg"
                android:elevation="2dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagefitur4"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_marginTop="17dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/saran_admin" />

                <TextView
                    android:id="@+id/TVfitur4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="120dp"
                    android:fontFamily="@font/poppins"
                    android:text="List Saran"
                    android:textSize="11dp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/bg_nav_menu">

        <include layout="@layout/main_nav_drawer1" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>