<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgsaran"
    tools:context=".UpdateProfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/ic_kembali_ubahprofil"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_kembali"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubah Data"
            android:textSize="20dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/carter_one"
            android:textColor="@color/color2"
            android:layout_marginLeft="25dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110dp"
        android:background="@drawable/splash">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic_profil_staff"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/noimages"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/white"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:id="@+id/IM_ubahfoto_profil"
            android:clickable="true"
            android:elevation="3dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_foto"
            app:civ_border_color="@color/white"
            app:civ_border_width="7dp"
            android:layout_marginTop="-46dp"
            android:layout_marginRight="90dp"
            android:layout_gravity="end"
            tools:ignore="MissingConstraints"/>

        <EditText
            android:id="@+id/ETUp_namapengguna_profil"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/poppins"
            android:hint="Nama Pengguna"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_user"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:layout_marginTop="30dp"
            android:paddingBottom="10dp"
            android:textSize="14sp"
            android:drawablePadding="15dp" />

        <EditText
            android:id="@+id/ETUp_namalengkap_profil"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/poppins"
            android:hint="Nama Lengkap"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_user"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:textSize="14sp"
            android:drawablePadding="15dp" />

        <EditText
            android:id="@+id/ETUp_nim_profil"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/poppins"
            android:hint="NIM"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_nim"
            android:layout_marginTop="8dp"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:textSize="14sp"
            android:drawablePadding="15dp" />

        <EditText
            android:id="@+id/ETUp_nohp_profil"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/poppins"
            android:hint="No Handphone"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_telepon"
            android:layout_marginTop="8dp"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:textSize="14sp"
            android:drawablePadding="15dp" />

        <Button
            android:id="@+id/BTUp_Data_Profil"
            android:layout_width="296dp"
            android:layout_height="45dp"
            android:text="Simpan Data"
            android:textAllCaps="false"
            android:elevation="2dp"
            android:textSize="16dp"
            android:layout_marginVertical="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_bg"/>


    </LinearLayout>


</LinearLayout>